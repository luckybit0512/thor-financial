#!/usr/bin/env bash

set -eu
set -o pipefail

if [ "$#" -lt 1 ]; then
  echo "USAGE: $0 TAG"
  exit 1
fi

TAG="$1"

# add, commit, tag, and push
git commit --allow-empty -m  "Deploy $TAG"
git tag "$TAG"
git push
git push --tags origin master

# git add, commit, checkout, push
git add .
git commit  -m 'refactor/readme'
git branch -m 'branchname'
#git instruction
